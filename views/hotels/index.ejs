<% layout('layouts/boilerplate') %>
    <h1>All Hotels</h1>

    <% for(let hotel of hotels) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= hotel.image %> " alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= hotel.title %>
                        </h5>
                    </div>
                    <p class="card-text">
                        <%= hotel.description %>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= hotel.location %>
                        </small>
                    </p>
                    <a class="btn btn-primary" href="/hotels/<%=hotel._id %> ">View <%= hotel.title %> </a>

                </div>
            </div>

        </div>
        <% } %>