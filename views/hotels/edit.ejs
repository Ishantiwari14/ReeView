<%- layout('layouts/boilerplate') %>



    <div class="row">
        <h1 class="text-center">Edit Hotel</h1>
        <div class="col-6 offset-3">
            <form action="/hotels/<%= hotel._id %>?_method=PUT " method="POST" class="isValidated" novalidate>

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="hotel[title]" id="title" value="<%=hotel.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="hotel[location]" id="location"
                        value="<%= hotel.location %> " required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="hotel[image]" id="image" value="<%=hotel.image %> "
                        required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="hotel[price]"
                            aria-label="Price" aria-describedby="" value="<%= hotel.price %> " required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Add a description</label>
                    <textarea class="form-control" name="hotel[description]" id="description"
                        required><%= hotel.description %> </textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Hotel</button>

                </div>

            </form>
            <a href="/hotels/<%= hotel._id %> ">Back to All Hotels</a>
        </div>
    </div>